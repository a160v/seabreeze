<div class="container">
<h1>Tell us more about your boat</h1>
<%= simple_form_for @boat do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :capacity %>
  <%= f.input :price_per_day %>
  <%= f.input :picture %>
  <%= f.submit "Rent my boat", class: "btn btn-primary" %>
<% end %>

</div>
