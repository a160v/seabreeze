<div class="container position-relative">
<h1>My Boat</h1>
  <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('') %>)">
    <div class="card">
      <img src="https://d18mr9iuob0gar.cloudfront.net/media/boats/2022/06/rental-Motor-boat-bPRINCESS-55feet-bZakynthos-bGR_DIGr3Pi.jpg" class="card-img-top img-fluid" alt="..." style="max-height: 300px;">
      <div class="card-body">
        <h5 class="card-title" style="font-size: 1.5rem;"><%= @boat.title %></h5>
        <p class="card-text" style="font-size: 1.2rem;">The Boat Price is <%= @boat.price_per_day %> CHF</p>
      </div>
      <% if @boat.user != current_user %>
        <%= simple_form_for [@boat, @boat.bookings.build], html: { onsubmit: "alert('must be in future')" } do |f| %>
          <%= f.input :check_in %>
          <%= f.input :check_out %>
          <%= f.submit "Book this boat", class: "btn btn-primary" %>
        <% end %>
      <% else %>
        <% @boat.bookings.pending.each do |booking| %>
          <%= button_to 'Accept', accept_booking_path(booking) %>
          <%= button_to 'Decline', reject_booking_path(booking) %>
        <% end %>
      <% end %>
    </div>
  </div>
